{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "strictBindCallApply": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "type": "module",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
